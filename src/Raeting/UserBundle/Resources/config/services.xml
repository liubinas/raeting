<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="user.security.user_provider.class">Raeting\UserBundle\Security\UserProvider</parameter>
        <parameter key="user.model.user.class">Raeting\UserBundle\Model\User</parameter>
        <parameter key="user.service.user.class">Raeting\UserBundle\Service\User</parameter>
        <parameter key="user.helper.user.class">Raeting\UserBundle\Templating\Helper\UserHelper</parameter>
    </parameters>

    <services>
        <service id="user.security.user_provider" class="%user.security.user_provider.class%">
            <argument type="service" id="user.service.user" />
        </service>

        <service id="user.model.user" class="%user.model.user.class%">
            <argument type="service" id="doctrine.dbal.default_connection" />
        </service>

        <service id="user.service.user" class="%user.service.user.class%">
            <argument type="service" id="user.model.user" />
            <argument type="service" id="security.encoder_factory" />
        </service>

        <!-- Helpers -->
        <service id="user.helper.user" class="%user.helper.user.class%">
            <tag name="templating.helper" alias="user" />
            <argument type="service" id="security.context" />
        </service>
    </services>
</container>
