<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="user" pattern="/">
        <default key="_controller">RaetingUserBundle:User:index</default>
    </route>

    <route id="user_show" pattern="/{id}/show">
        <default key="_controller">RaetingUserBundle:User:show</default>
    </route>

    <route id="user_new" pattern="/new">
        <default key="_controller">RaetingUserBundle:User:new</default>
    </route>

    <route id="user_create" pattern="/create">
        <default key="_controller">RaetingUserBundle:User:create</default>
        <requirement key="_method">post</requirement>
    </route>

    <route id="user_edit" pattern="/{id}/edit">
        <default key="_controller">RaetingUserBundle:User:edit</default>
    </route>

    <route id="user_update" pattern="/{id}/update">
        <default key="_controller">RaetingUserBundle:User:update</default>
        <requirement key="_method">post|put</requirement>
    </route>

    <route id="user_delete" pattern="/{id}/delete">
        <default key="_controller">RaetingUserBundle:User:delete</default>
        <requirement key="_method">post|delete</requirement>
    </route>

</routes>
